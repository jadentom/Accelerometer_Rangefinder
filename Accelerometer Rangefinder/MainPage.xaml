<Page
    x:Class="Accelerometer_Rangefinder.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Accelerometer_Rangefinder"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <CaptureElement x:Name="VideoStream" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <TextBlock x:Name="AccelerometerText" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Accel" VerticalAlignment="Top" FontSize="16"/>
        <TextBlock x:Name="AngleText" HorizontalAlignment="Right" Margin="0,10,10,0" TextWrapping="Wrap" Text="Angle:" VerticalAlignment="Top" FontSize="16"/>
        <TextBlock x:Name="DistText" HorizontalAlignment="Right" Margin="0,71,10,0" TextWrapping="Wrap" Text="Distance: " VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="DeviceHeightText" HorizontalAlignment="Right" Margin="0,34,10,0" TextWrapping="Wrap" Text="1.5" VerticalAlignment="Top"/>
        <TextBlock x:Name="EnterHeightLabel" HorizontalAlignment="Right" Margin="0,47,79,0" TextWrapping="Wrap" Text="Height of device: " VerticalAlignment="Top" FontSize="16"/>

    </Grid>
</Page>
